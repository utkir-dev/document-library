<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_back"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp15"
    android:paddingVertical="@dimen/spacing_tiny">
    <TextView
        android:id="@+id/tv_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="100-bet"
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textStyle="italic"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_searched_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Search word"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_saved_word"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/dp4"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/star1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dict_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="@color/grey_dark1"
            android:textSize="@dimen/font17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:maxLines="2"
            android:text="..."
            android:textColor="@color/grey_dark1"
            android:textSize="@dimen/font17" />
    </LinearLayout>


</LinearLayout>