<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:backgroundTintMode="@android:color/transparent"
    android:layout_margin="@dimen/dp20"
    app:cardCornerRadius="@dimen/dp20"
    app:cardElevation="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Samsumg S9+"
            android:textSize="@dimen/font18"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp10"
            android:text="Device id: sd45r442456" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_dot"
            android:background="@android:color/darker_gray" />


        <CheckBox
            android:id="@+id/chb_make_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_dot"
            android:background="@android:color/darker_gray" />


        <CheckBox
            android:id="@+id/chb_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taqiqlash"
            android:textColor="@color/red"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_dot"
            android:background="@android:color/darker_gray" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:paddingHorizontal="@dimen/spacing_normal"
            android:text="Tasdiqlash"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>