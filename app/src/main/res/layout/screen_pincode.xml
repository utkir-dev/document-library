<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l_enter_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:text="Enter the code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font18" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_entered_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/dp60"
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/background" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="1" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="3" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="4" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card5"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="5" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card6"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="6" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card7"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="7" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card8"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="8" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card9"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="9" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_clear"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        android:layout_margin="@dimen/dp10"
                        android:gravity="center"
                        android:src="@drawable/ic_back_space" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card0"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="0" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ok"
                        style="@style/CardNumberStyle">

                        <TextView
                            style="@style/TextPincodeStyle"
                            android:text="OK"
                            android:textSize="@dimen/font24"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/layout_mask_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_back"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/game1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp10"
            android:paddingVertical="@dimen/dp20">

            <ImageView
                android:id="@+id/iv_mask_star"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:src="@drawable/star1" />

            <ImageView
                android:id="@+id/iv_mask_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp80"
                android:src="@drawable/register" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>