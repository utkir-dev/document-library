<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_root_folder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l_item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_spacer"
            android:layout_width="@dimen/dp10"
            android:layout_height="0.1dp"
            android:background="@color/grey_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingStart="@dimen/dp3"
            android:src="@drawable/ic_folder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp3"
            android:paddingEnd="@dimen/dp3">

            <TextView
                android:id="@+id/tv_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="@dimen/dp2"
                android:text="folder"
                android:textColor="@color/black"
                android:textSize="@dimen/font18" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp2"
                android:maxLines="1"
                android:text="file size"
                android:textSize="@dimen/font10"
                android:visibility="visible" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_file_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp7"
            android:src="@drawable/ic_file_download"
            android:visibility="visible" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_documents"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp25"
        android:layoutAnimation="@anim/layout_animation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_document" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey_light"
        android:visibility="gone" />

</LinearLayout>