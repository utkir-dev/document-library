<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    android:backgroundTintMode="@android:color/transparent"
    android:layout_margin="@dimen/dp20"
    app:cardCornerRadius="@dimen/dp20"
    app:cardElevation="@dimen/dp10">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <LinearLayout
            android:id="@+id/l_create_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_folder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text="Papka yaratish"
                android:textColor="@color/black"
                android:textSize="@dimen/font17" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_upload_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text=" Kitob yuklash"
                android:textColor="@color/black"
                android:textSize="@dimen/font17" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/l_upload_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp15"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_txt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text="TXT fayl yuklash"
                android:textColor="@color/black"
                android:textSize="@dimen/font17" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_upload_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_word" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text="Word fayl yuklash"
                android:textColor="@color/black"
                android:textSize="@dimen/font17" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/l_upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp10"
                android:text="Rasm yuklash"
                android:textColor="@color/black"
                android:textSize="@dimen/font17" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp15"
            android:text="Yopish"
            android:textColor="@color/blue"
            android:textSize="@dimen/font17" />
    </LinearLayout>


</androidx.cardview.widget.CardView>